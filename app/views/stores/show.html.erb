<% provide(:title, 'Прайс-лист') %>

<div class="row-fluid">
  <div class="span12">
    <h2 style="color:green">Аптека "
    <%= @store.name %> "</h2>
    <h3 style="color:green">Список товаров по алфавиту</h3>
  </div>
</div>

<% if @store.preparations.any? %>
    <div class="row-fluid">
      <div class="span7">
        <% if @store.preparations.count > 10 %>
            <p style="margin-top:-30px"><%= will_paginate @preparations %></p>
        <% else %>
            <div style="margin-top:45px"></div>
        <% end %>
        <table class="table table-striped table-hover" cellpadding = "5" style="margin-top:-12px">
                <tr>
                  <th style="color:#08C; width:30%">
                    Наименование товара
                  </th>
                  <th style="color:#08C; width:30%">
                    Производитель
                  </th>
                  <th style="color:#08C; width:28%">
                    Активное вещество
                  </th>
                  <th style="color:#08C; width:12%">
                    Цена
                  </th>
                </tr>
                <% @preparations.each do |p| %>
                    <tr>
                      <td>
                        <%= p.name %>
                      </td>
                      <td>
                        <%= p.manufacturer %>
                      </td>
                      <td>
                        <%= p.agent %>
                      </td>
                      <td>
                        <%= p.price %>
                      </td>
                    </tr>
                <% end %>
        </table>
      </div>
    </div>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="back_buttons">
        <%= link_to "На Главную", root_url, class: "btn btn-success"%>
    </div>
  </div>
</div>


