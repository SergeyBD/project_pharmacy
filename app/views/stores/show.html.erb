<% provide(:title, 'Прайс-лист') %>
<div class="phone_render">
  <%= render 'layouts/phone' %>
</div>
<div class="content_width">
    <table width="80%">
      <tr>
        <td>
            <h2 style="color:green">Аптека "
            <%= @store.name %> "</h2>
            <h3 style="color:green">Список товаров по алфавиту</h3>
        </td>
      </tr>
      <tr>
        <td>
           <% if @store.preparations.any? %>
                <% if @store.preparations.count > 10 %>
                    <p style="margin-top:-20px"><%= will_paginate @preparations %></p>
            <% else %>
                <div style="margin-top:55px"></div>
            <% end %>
        </td>
      </tr>
      <tr>
        <td>
           <table class="table table-striped table-hover custom_table" style="margin-top:-15px" cellpadding = "5">
                <tr>
                  <th style="color:#08C; width:200px">
                    Наименование товара
                  </th>
                  <th style="color:#08C; width:200px">
                    Производитель
                  </th>
                  <th style="color:#08C; width:150px">
                    Активное вещество
                  </th>
                  <th style="color:#08C; width:50px">
                    Цена
                  </th>
                </tr>
                <% @preparations.each do |p| %>
                    <tr>
                      <td>
                        <%= p.name %>
                      </td>
                      <td>
                        <%= p.manufacturer %>
                      </td>
                      <td>
                        <%= p.agent %>
                      </td>
                      <td>
                        <%= p.price %>
                      </td>
                    </tr>
                <% end %>
              </table>
        <% end %>
        </td>
      </tr>
      <tr>
        <td>
            <div class="back_buttons">
                <%= link_to "На Главную", root_url, class: "btn btn-success"%>
            </div>
        </td>
      </tr>
    </table>
</div>