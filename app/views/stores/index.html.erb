<% provide(:title, 'Прайс-лист') %>

<div class="row-fluid">
  <div class="span12" style="margin-bottom:90px">
    <h1 class="pages_headers">Выберите аптеку</h1>
  </div>
</div>

<div class="row-fluid">
  <div class="span5">
     <ul style="list-style-type:none">
        <% @stores.each do |store| %>
          <li style="margin-bottom:4.5%">
            <%= link_to(store) do %>
                <strong class="store_font"><%= store.name %></strong> (<span><%= store.address %></span>)
            <% end %>
          </li>
        <% end %>
     </ul>
     <div class="back_buttons">
        <%= link_to "На Главную", root_url, class: "btn btn-success"%>
     </div>
  </div>

  <div class="span7">
     <%= render 'layouts/phone' %>
  </div>
</div>


