<% provide(:title, 'Наши вакансии') %>

<div class="row-fluid">
  <div class="span12">
    <h1 style="color:green; margin-bottom:20px">Наши вакансии</h1>
    <h2 style="color:green; margin-bottom:35px">Требования и условия:</h2>
  </div>
</div>

<div class="row-fluid">
  <div class="span7">
     <table class="table table-striped table-hover" cellpadding = "5">
        <% @vacancies.each do |v| %>
          <tr>
            <td>
            <h2 style="color:#08C"><%= v.name %></h2>
            </td>
          </tr>
          <tr>
            <td>
              <b style="color:#08C">Образование:</b>
              <%= v.education %>
            </td>
          </tr>
          <tr>
            <td>
              <b style="color:#08C">Опыт работы:</b>
              <%= v.experience %>
            </td>
          </tr>
          <tr>
            <td>
              <b style="color:#08C">Занятость:</b>
              <%= v.employment %>
            </td>
          </tr>
          <tr>
            <td>
              <b style="color:#08C">График работы:</b>
              <%= v.time_schedule %>
            </td>
          </tr>
          <tr>
            <td>
              <b style="color:#08C">Заработная плата:</b>
              <%= v.salary %>
            </td>
          </tr>
        <% end %>
    </table>
    <div class="back_buttons">
        <%= link_to "На Главную", root_url, class: "btn btn-success"%>
    </div>
  </div>
  <div class="span5">
     <img src='assets/telephone_employment.png'>
  </div>
</div>


