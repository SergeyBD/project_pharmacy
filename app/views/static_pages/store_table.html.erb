<% provide(:title, 'Наши аптеки') %>

<div class="row-fluid">
  <div class="span12">
    <h1 class="pages_headers">Наши аптеки</h1>
  </div>
</div>

<div class="row-fluid">
  <div class="span7" style="margin-top:25px">
   <ul class="nav nav-tabs">
      <li><%= link_to "Карта", store_map_path %></li>
      <li class="active">
        <%= link_to "Список", store_table_path %>
      </li>
   </ul>
   <table class="table table-striped table-hover" cellspacing="5" cellpadding="10">
      <tr>
        <th>
          Название аптеки
        </th>
        <th>
          Адрес
        </th>
         <th>
          Контактный телефон
        </th>
        <th>
          Часы работы
        </th>
      </tr>
      <% @stores.each do |store| %>
       <tr>
            <td style="color:#08C">
              <%= store.name %>
            </td>
            <td style="color:green">
              <%= store.address %>
            </td>
            <td style="color:rgb(119, 155, 166)">
              <%= store.telephone %>
            </td>
            <td style="color:black">
              <%= store.operation_hours %>
            </td>
      </tr>
      <% end %>
    </table>
   <div class="back_buttons">
      <%= link_to "На Главную", root_url, class: "btn btn-success"%>
   </div>
  </div>
</div>


