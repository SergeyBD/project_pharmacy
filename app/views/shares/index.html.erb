<% provide(:title, 'Наши акции') %>

<div class="row-fluid">
  <div class="span12">
    <h1 style="color:green; margin-bottom:70px">Наши акции</h1>
  </div>
</div>

<div class="row-fluid">
  <div class="span4">
    <table cellpadding = "5">
      <% @shares.each do |s| %>
        <tr>
          <td colspan="2">
            <h2><%= link_to s.name, s %></h2>
          </td>
        </tr>
        <tr>
          <td>
            <%= image_tag s.image.thumb('270x170!').url, alt: 'Loading...' %>
          </td>
        </tr>
      <% end %>
    </table>
    <div class="back_buttons">
        <%= link_to "На Главную", root_url, class: "btn btn-success"%>
    </div>
  </div>
  <div class="span8">
    <%= render 'layouts/phone' %>
  </div>
</div>

